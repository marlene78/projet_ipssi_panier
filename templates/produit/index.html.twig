{% extends 'base.html.twig' %}

{% block title %}{% trans %}Liste des produits{% endtrans %}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{% trans %}Liste des produits{% endtrans %}</h1>

{% if produits is not empty %}

{#<img src="{{ asset("uploads/taskImg/" ~ task.image )}}"> <a href="{{ path('task', {id:task.id})}}"> {{task.nom}} | {{task.deadline|date("d/m/Y")}}</a>
   
#}
         
    <div class="row">
        
        {% for produit in produits %}
          
            <div class="col-md-4">
                <a href="{{ path('produit_show' , {'id' : produit.id }) }}" class="text-dark">
                <div class="card mb-4 shadow-sm">
                    <img src="{{ asset("uploads/produitImg/" ~ produit.photo )}}" width="100%" height="225" class="card-img-top">
                    <div class="card-body">
                        <ul class="card-text">
                           <li>{% trans %}Nom{% endtrans %}: {{ produit.nom }}</li>
                           <li>{% trans %}Quantité:{% endtrans %} {{ produit.quantite }}</li>
                           <li>{% trans %}Prix{% endtrans %}: {{ produit.prix }}{% trans %}€{% endtrans %}</li>
                        </ul>
                    </div>
                </div>
                </a>
            </div>
          

        {% endfor %}


    </div>
{% else %}
    <p>Liste vide</p>
{% endif %}

   
  
     <a href="{{ path('produit_new') }}" class="btn btn-secondary">{% trans %}Ajouter un produit{% endtrans %}</a>
    

</div>
{% endblock %}
